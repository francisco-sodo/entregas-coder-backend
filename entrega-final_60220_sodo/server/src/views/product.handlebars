<main class="main-container">


 
    <nav class="nav">

        <div>
            <a href="/products">Volver a Productos</a>
        </div>
        <span>|</span>

       
        {{#if isNotAdmin}}
         

        <div>
            <a href="/carts/:cid">Mi Carrito</a>
        </div>
        <span>|</span>
        <div>
            <a href="/chat" target="_blank">Ir al Chat</a>
        </div>
        <span>|</span>
        <div>
            <a href="/user/current">Mi Perfil</a>
        </div>
        <span>|</span>
        <div>
            <a href="/user/logout">Logout</a>
        </div>
        <span>|</span>
        <div class="user" data-cid="{{cid}}">
             <p><strong>{{userName}}</strong></p>
        </div>

        {{else}}

        <div>
            <a href="/user/current">Mi Perfil</a>
        </div>
        <span>|</span>
        <div>
            <a href="/user/logout">Logout</a>
        </div>
        <span>|</span>
        <div class="user">
            <p><strong>{{userName}}</strong></p>
        </div>


        {{/if}}
        

    </nav>



<section class="card" data-cid="{{cid}}">
    
    <div class="img-card-container">
        <img src="{{product.thumbnails}}" width="200" alt="{{product.title}}">
    </div>

    <div class="info-card-container">
        <ul>
            <li>
                <h2>{{product.title}}</h2>
            </li>
            <li><b>Categoría:</b> {{product.category}}</li>
            <li>
                <h3><b>Precio:</b>${{product.price}}</h3>
            </li>
            <li><b>Descripción:</b> {{product.description}}</li>
            {{!-- <li><b>Status:</b> {{product.status}}</li> --}}
            <li><b>Stock:</b> {{product.stock}}</li>
            <br>
            <li class="small-copy"><b>Código:</b> {{product.code}}</li>
            {{!-- <li><b>ID:</b> {{product._id}}</li> --}}
        </ul>
    

    

        {{#if isNotAdmin}}
        <button class="btn-normal" onclick="addToCart('{{product._id}}')">Agregar al Carrito</button>
        {{else}}
        <button class="btn-normal">Editar producto</button>
        <p style="font-size: x-small;">Editar producto no esta desarrollado en vistas</p>
        {{/if}}
    </div>


</section>
</main>


<script src="/js/addToCart.js"></script>

